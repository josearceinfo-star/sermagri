{
  "name": "sermagri-erp-desktop",
  "version": "1.0.0",
  "description": "Sermagri ERP Desktop Application",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "vite",
    "build:react": "vite build",
    "build:electron": "tsc -p tsconfig.node.json",
    "build": "npm run build:react && npm run build:electron",
    "dist": "npm run build && electron-builder",
    "electron:dev": "npm run build:electron && electron .",
    "start": "concurrently -k \"vite\" \"wait-on tcp:5173 && npm run electron:dev\""
  },
  "build": {
    "appId": "com.sermagri.erp",
    "productName": "Sermagri ERP Desktop",
    "files": [
      "dist",
      "dist-electron"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.4.8",
    "electron-squirrel-startup": "^1.0.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.12.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^29.3.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0",
    "electron-builder": "^24.13.3"
  }
}
